@{
    Layout = "~/Views/Shared/_LayoutFormadorApp.cshtml";
}
<div class="container-fluid">
    <div class="row page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Catalogo de solicitudes</a></li>

        </ol>
    </div>
    <!-- row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" style="text-transform: unset">Lista de solicitudes</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive-md" id="lista" name="lista">
                            <thead>
                                <tr>
                                    <th><strong>Id</strong></th>

                                    <th><strong>Matrícula</strong></th>
                                    <th><strong>Nombre</strong></th>
                                    <th><strong>Formador</strong></th>
                                    <th><strong>Proyecto</strong></th>
                                    <th><strong>Estatus</strong></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.listSolicitudes)
                                {
                                    <tr>
                                        <td><strong>@item.id</strong></td>
                                        <td>@item.alumno.matricula</td>

                                        <td>@item.alumno.nombre</td>

                                        <td>@item.proyecto.formador.Nombre</td>

                                        <td>@item.proyecto.nombre</td>
                                        <td>@item.estatus</td>
                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn btn-success light sharp" data-bs-toggle="dropdown">
                                                    <svg width="20px" height="20px" viewBox="0 0 24 24" version="1.1"><g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><rect x="0" y="0" width="24" height="24" /><circle fill="#000000" cx="5" cy="12" r="2" /><circle fill="#000000" cx="12" cy="12" r="2" /><circle fill="#000000" cx="19" cy="12" r="2" /></g></svg>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" onclick="buscarSolciitud(@item.id)">Ver detalles</a>


                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }




                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<div id="modalProyecto" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Solicitud No  <span class="badge badge-success light" id="idProyecto"> </span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="product-detail-content">
                    <!--Product details-->
                    <div class="new-arrival-content pr">
                        <div class="row">
                            <div class="media mb-4 align-items-center col-md-9">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#0b5ed7" class="fa fa-user-circle"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">Nombre del Proyecto</p>
                                    <h4 class="mb-0 text-black" id="nombre">$124,00</h4>
                                </div>
                            </div>
                            <div class="media mb-4 align-items-center col-md-2">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#0b5ed7" class="fa fa-info-circle"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1"> Estatus</p>
                                    <h4 class="mb-0 text-black" id="estatus">$124,00</h4>
                                </div>
                            </div>
                        </div>
                        <div class="row">



                            <div class="media mb-4 align-items-center col-md-6">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#0b5ed7" class="fa fa-people-carry"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">Nombre del Alumno</p>
                                    <h4 class="mb-0 text-black" id="alumno">$124,00</h4>
                                </div>
                            </div>
                            <div class="media mb-4 align-items-center  col-md-6">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#0b5ed7" class="fa fa-sitemap"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">Matricula</p>
                                    <h4 class="mb-0 text-black" id="matricula">$124,00</h4>
                                </div>
                            </div>
                            <div class="media mb-4 align-items-center  col-md-6">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#0b5ed7" class="fa fa-mail-bulk"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">Email</p>
                                    <h4 class="mb-0 text-black" id="email">$124,00</h4>
                                </div>
                            </div>
                        </div>



                        <div class="media mb-4 align-items-center ">
                            <div class="me-3">
                                <i style="font-size:40px; color:#0b5ed7" class="fa fa-chart-pie"></i>
                            </div>
                            <div class="media-body">
                                <p class="mb-1"> Habilidades</p>
                                <h4 class="mb-0 text-black" id="habilidades">$124,00</h4>
                            </div>
                        </div>
                        <div class="media mb-4 align-items-center">
                            <div class="me-3">
                                <i style="font-size:40px; color:#0b5ed7" class="fa fa-puzzle-piece primary"></i>
                            </div>
                            <div class="media-body">
                                <p class="mb-1"> Areas de Interes:</p>
                                <h4 class="mb-0 text-black" id="intereses">$124,00</h4>
                            </div>
                        </div>


                        <div class="media mb-4 align-items-center">
                            <div class="me-3">
                                <i style="font-size:40px; color:#0b5ed7" class="fa fa-envelope-open-text"></i>
                            </div>
                            <div class="media-body">
                                <p class="mb-1">Comentarios del Alumno</p>
                                <p class="mb-0 text-black" id="comentario">$124,00</p>
                            </div>
                        </div>

                        
                    </div>
                </div>





            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-danger" onclick="actualizarSolicitud(1,'Rechazada')">Cancelar Solicitud</button>
                <button type="button" class="btn btn-primary" onclick="actualizarSolicitud(1,'Asignado')">Aceptar Solicitud</button>
            </div>
        </div>
    </div>
</div>

<script>
        function buscarSolciitud(item) {




                    $.post("@Url.Action("ConsultarSolicitud","Ofertas")", { id: item}, function (datas) {


                        $("#idProyecto").text(datas.id);
                        $("#matricula").text(datas.alumno.matricula);
                        $("#nombre").text(datas.proyecto.nombre);
                        $("#descripcion").text(datas.proyecto.descripcion);
                        $("#estatus").val(datas.estatus);
                        $("#alumno").text(datas.alumno.nombre);
                        $('#comentario').text(datas.comentario),
                            $('#estatus').text(datas.estatus),
                            $('#email').text(datas.alumno.EmailInst),
                        $("#habilidades").empty();
                         $("#intereses").empty();
                        datas.alumno.listHabilidades.forEach(function (item) {
                            var mess='<span class="badge badge-success light">' + item.Descripcion + '</span>'
                            $("#habilidades").append(mess);

                        });
                     datas.alumno.listAreaInteres.forEach(function (item) {
                            var mess='<span class="badge badge-success light">' + item.Descripcion + '</span>'
                            $("#intereses").append(mess);

                        });

                        $("#modalProyecto").modal("show");
                        });
        };
   function   actualizarSolicitud(id,estatus) {

       id = $('#idProyecto').text();

       $.post("@Url.Action("ActualizarSolicitud", "Ofertas")", { id: id, estatus: estatus }, function (datas) {

           alert("La Solicitud ha sido "+estatus);

                        window.location.href = '/Proyectos';

                    });
        };

</script>
