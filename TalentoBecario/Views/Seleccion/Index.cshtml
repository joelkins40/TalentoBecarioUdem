@{
    Layout = "~/Views/Shared/_LayoutFormadorApp.cshtml";
}
<div class="container-fluid">
    <div class="row page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Listado de Estudiantes</a></li>

        </ol>
    </div>
    <!-- row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" style="text-transform: unset">Lista de alumnos</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive-md"  id="lista" name="lista">
                            <thead>
                                <tr>
                                    <th><strong>Matrícula</strong></th>
                                    <th><strong>Nombre</strong></th>
                                    <th><strong>Nivel</strong></th>
                                    <th><strong>Programa</strong></th>
                                    <th><strong>Formador</strong></th>
                                    
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.listAlumnos)
                                {
                                    <tr>
                                        <td><strong>@item.matricula</strong></td>
                                        <td>@item.nombre</td>
                                        <td>@item.nivel</td>
                                        <td>@item.programa</td>
                                        <td>@item.formador.Nombre</td>

                                       
                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn btn-success light sharp" data-bs-toggle="dropdown">
                                                    <svg width="20px" height="20px" viewBox="0 0 24 24" version="1.1"><g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><rect x="0" y="0" width="24" height="24" /><circle fill="#000000" cx="5" cy="12" r="2" /><circle fill="#000000" cx="12" cy="12" r="2" /><circle fill="#000000" cx="19" cy="12" r="2" /></g></svg>
                                                </button>
                                                <div class="dropdown-menu">
                                                    
                                                    <a class="dropdown-item" onclick="cambiarFormador('@item.pidm')">Solicitar Alumno</a>

                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div id="modalProyecto" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Datos del Proyecto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-2">
                        No.Proyecto: <h6 id="idProyecto"></h6>
                    </div>
                    <div class="col-md-10">
                        Nombre: <h6 id="nombre"></h6>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        Formador: <h6 id="formador"></h6>
                    </div>
                    <div class="col-md-4">
                        Descripción: <h6 id="descripcion"></h6>
                    </div>
                    <div class="col-md-4">
                        Departamento UDEM: <h6 id="departamento"></h6>
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-6">
                        Habilidades
                        <ul class="list-group" id="habilidades"></ul>
                    </div>
                    <div class="col-md-6">
                        Áreas de interes.
                        <ul class="list-group" id="intereses"></ul>
                    </div>

                </div>
                <div class="row">

                    <div class="mb-3 col-md-12">
                        <label class="form-label">Comentarios</label>
                        <textarea name="comentario" id="comentario" class="form-control" rows="2" required></textarea>
                    </div>

                </div>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardarSolicitud()">Aplicar al Proyecto</button>
            </div>
        </div>
    </div>
</div>

<script>
        function cambiarFormador(item) {




            $.post("@Url.Action("AsignarAlumnoFormador","Seleccion")", { matricula: item }, function (datas) {
              
                if (datas == 'A') {
                    window.location.href = '/Seleccion';
                     alert('El alumno ha sido asignado a un formador'); 
                } else {
                      alert(datas); 
                }
                 
                        });
        };
    function guardarSolicitud() {

          var solicitud = JSON.stringify(
              {
                   'alumno.Pidm': '0',
                  'proyecto.id': $('#idProyecto').text(),
                  'comentario': $('#comentario').val(),
                    'estatus':'En Revisión'

                    });
                    $.ajax({
                    url: '/Ofertas/SaveSolicitud',
                    type: "post",
                    contentType: "application/json",
                    dataType: "json",
                    traditional: true,
                    data: solicitud,
                        success: function (results) {

                                alert(results);


                      window.location.href = '/Ofertas';


                    }
                    })
    }

</script>