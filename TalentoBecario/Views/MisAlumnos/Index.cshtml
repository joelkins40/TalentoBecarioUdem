@{
    Layout = "~/Views/Shared/_LayoutFormadorApp.cshtml";
}
<div class="container-fluid">
    <div class="row page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Listado de Estudiantes</a></li>

        </ol>
    </div>
    <!-- row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" style="text-transform: unset">Lista de alumnos</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive-md" id="lista" name="lista">
                            <thead>
                                <tr>
                                    <th><strong>Matrícula</strong></th>
                                    <th><strong>Nombre</strong></th>
                                    <th><strong>Nivel</strong></th>
                                    <th><strong>Programa</strong></th>
                                    <th><strong>Formador</strong></th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.listAlumnos)
                                {
                                    <tr>
                                        <td><strong>@item.matricula</strong></td>
                                        <td>@item.nombre</td>
                                        <td>@item.nivel</td>
                                        <td>@item.programa</td>
                                        <td>@item.formador.Nombre</td>


                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn btn-success light sharp" data-bs-toggle="dropdown">
                                                    <svg width="20px" height="20px" viewBox="0 0 24 24" version="1.1"><g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><rect x="0" y="0" width="24" height="24" /><circle fill="#000000" cx="5" cy="12" r="2" /><circle fill="#000000" cx="12" cy="12" r="2" /><circle fill="#000000" cx="19" cy="12" r="2" /></g></svg>
                                                </button>
                                                <div class="dropdown-menu">

                                                    <a class="dropdown-item" onclick="buscarSolciitud('@item.matricula')">Ver Detalles</a>

                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div id="modalProyecto" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Datos del Alumno </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="product-detail-content">
                    <!--Product details-->
                    <div class="new-arrival-content pr">
                        <div class="row">
                            <div class="media mb-4 align-items-center col-md-4">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#ffe000" class="fa fa-info-circle"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1"> Matricula</p>
                                    <h4 class="mb-0 text-black"  id="matricula" >$124,00</h4>
                                </div>
                            </div>
                            <div class="media mb-4 align-items-center col-md-8">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#ffe000" class="fa fa-user-circle"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">Nombre del Alumno</p>
                                    <h4 class="mb-0 text-black" id="alumno">$124,00</h4>
                                </div>
                            </div>
                           
                        </div>
                        <div class="row">


                            <div class="media mb-4 align-items-center col-md-4">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#ffe000" class="fa fa-sitemap"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">Nivel</p>
                                    <h4 class="mb-0 text-black" id="nivel">$124,00</h4>
                                </div>
                            </div>


                            <div class="media mb-4 align-items-center  col-md-4">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#ffe000" class="fa fa-money-bill"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">% Beca</p>
                                    <h4 class="mb-0 text-black" id="beca">$124,00</h4>
                                </div>
                            </div>
                            <div class="media mb-4 align-items-center  col-md-4">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#ffe000" class="fa fa-clock"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">Horas</p>
                                    <h4 class="mb-0 text-black" id="horas">$124,00</h4>
                                </div>
                            </div>
                            <div class="media mb-4 align-items-center  col-md-6">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#ffe000" class="fa fa-calendar-times"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">Programa</p>
                                    <h4 class="mb-0 text-black" id="programa">$124,00</h4>
                                </div>
                            </div>
                            <div class="media mb-4 align-items-center  col-md-4">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#ffe000;"  class="fa fa-people-carry"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">Avance Academico</p>
                                    <h4 class="mb-0 text-black" id="avance">$124,00</h4>
                                </div>
                            </div>
                            <div class="media mb-4 align-items-center  col-md-4">
                                <div class="me-3">
                                    <i style="font-size:40px; color:#ffE000" class="fa fa-mail-bulk"></i>
                                </div>
                                <div class="media-body">
                                    <p class="mb-1">Email</p>
                                    <h4 class="mb-0 text-black" id="email">$124,00</h4>
                                </div>
                            </div>
                        </div>



                        <div class="media mb-4 align-items-center ">
                            <div class="me-3">
                                <i style="font-size:40px; color:#ffe000" class="fa fa-chart-pie"></i>
                            </div>
                            <div class="media-body">
                                <p class="mb-1"> Habilidades</p>
                                <h4 class="mb-0 text-black" id="habilidades">$124,00</h4>
                            </div>
                        </div>
                        <div class="media mb-4 align-items-center">
                            <div class="me-3">
                                <i style="font-size:40px; color:#ffe000" class="fa fa-puzzle-piece primary"></i>
                            </div>
                            <div class="media-body">
                                <p class="mb-1"> Areas de Interes:</p>
                                <h4 class="mb-0 text-black" id="intereses">$124,00</h4>
                            </div>
                        </div>



                    </div>
                </div>





            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Cerrar</button>
              </div>
        </div>
    </div>
</div>


<script>
        function buscarSolciitud(item) {




                    $.post("@Url.Action("ConsultarAlumno","MisAlumnos")", { matricula: item}, function (datas) {


                        $("#idProyecto").text(datas.id);
                        $("#matricula").text(datas.matricula);
                        $("#alumno").text(datas.nombre);
                        $("#beca").text(datas.porcentajeBeca);
                        $("#nivel").text(datas.nivel);
                        $("#programa").text(datas.programa);
                        $("#horas").text(datas.horas);
                        $("#avance").text(datas.avanceAcademico);
                     $("#email").text(datas.EmailInst);
                        $("#habilidades").empty();
                         $("#intereses").empty();
                        datas.listHabilidades.forEach(function (item) {
                            var mess='<span class="badge rounded-pill bg-dark ">' + item.Descripcion + '</span>'
                            $("#habilidades").append(mess);

                        });
                     datas.listAreaInteres.forEach(function (item) {
                            var mess='<span class="badge rounded-pill bg-dark ">' + item.Descripcion + '</span>'
                            $("#intereses").append(mess);

                        });

                        $("#modalProyecto").modal("show");
                        });
        };
    function guardarSolicitud() {

          var solicitud = JSON.stringify(
              {
                   'alumno.Pidm': '0',
                  'proyecto.id': $('#idProyecto').text(),
                  'comentario': $('#comentario').val(),
                    'estatus':'En Revisión'

                    });
                    $.ajax({
                    url: '/Ofertas/SaveSolicitud',
                    type: "post",
                    contentType: "application/json",
                    dataType: "json",
                    traditional: true,
                    data: solicitud,
                        success: function (results) {

                                alert(results);


                      window.location.href = '/Ofertas';


                    }
                    })
    }

</script>